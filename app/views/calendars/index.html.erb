<div class="container">
  <div class="row" >
    <div class="col-12">
      <%= month_calendar events: @tasks, attribute: :start_time do |date, tasks| %>
        <%= date.day %>

        <% tasks.sort_by(&:start_time).each do |task| %>
          <div>
            <%= link_to task.name, task_path(task), class: "fs-6 link-dark link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover" %>
            <small><%= l task.start_time, format: :short %></small>
            <span class= "<%= task_state_class(task.state) %>">
              <%=  task.state_i18n %>
            </span>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>