<div class="container">
  <div class="row" >
    <div class="col-12">
      <%= month_calendar events: @tasks, attribute: :start_time do |date, tasks| %>
        <%= date.day %>

        <% tasks.each do |task| %>
          <div>
            <%= task.name %>
          </div>
        <% end %>
      <% end %>      
    </div>
  </div>
</div>