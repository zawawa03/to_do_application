<div class='container'>
  <div class='row'>
    <div class='col-md-8'>
      <%= render partial: 'shared/error_message', locals: { object: @task } %>
      <%= render partial: 'task_form', locals: { task: @task } %>
    </div>
  </div>
  <div class='row'>
    <div class='col-md-10 d-flex mx-auto mt-4'>
      <%= link_to 'タスク一覧', tasks_path, class: 'btn btn-secondary me-2' %>
      <%= link_to '詳細', task_path(@task), class: "btn btn-primary" %>
    </div>
  </div>
</div>