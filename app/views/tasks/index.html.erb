<div class='container'>
  <div class='row my-4'>
    <div class='col-md-4'>
      <h1>タスク一覧</h1>
    </div>
    <div class='col-md-4'>
      <div class="d-grid gap-2 col-6 mx-auto">
        <button class="btn btn-secondary" type="button"><%= link_to t('.new_create'), new_task_path, class:'link-light' %></button>
      </div>
    </div>   
  </div>
  <div class='row'>
    <div class='col-md-8'>
      <table class="table">
        <thead>
         <tr>
          <th scope="col">タスク名</th>
          <th scope="col">製作者</th>
          <th scope="col">ステータス</th>
          <th scope="col">期限</th>
          <th scope="col"></th>
         </tr>
        </thead>
        <tbody>
          <%= render partial: 'task', collection: @tasks %>
        </tbody>
      </table>
    </div>
  </div>
</div>