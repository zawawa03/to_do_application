<div class="container">
  <div class="row">
    <div class="col-md-10 mt-5">
      <h1>タスク詳細</h1>
      <div class="d-flex my-3">
        <h3><%= @task.name %></h3>
        <div class="bg-primary-subtle border border-primary-subtle rounded-3 ms-3"><p class="text-primary-emphasis m-2"><%= @task.state %></p></div>
      </div>
      <div class="date">
        <h5>期限</h5>
        <span class="border-bottom border-primary-subtle fs-5"><%= l @task.start_time, format: :long %></span>
      </div>
      <div class="content my-3">
        <h5>内容</h5>
        <span class="fw-normal fs-5"><%= @task.body %></span>
      </div>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-md-8">
      <%= link_to t('default.edit'), edit_task_path(@task), class: 'btn btn-success me-3' %>
      <%= link_to t('default.delete'), task_path(@task), class: 'btn btn-danger', date: { turbo_method: :delete } %>
    </div>
  </div>
</div>