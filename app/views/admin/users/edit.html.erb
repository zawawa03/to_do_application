<div class="container">
  <div class="row">
    <div class="col-md-10 mt-3">
      <%= render partial: 'shared/error_message', locals: { object: @user } %>
      <%= form_with model: @user, url: admin_user_path, method: :put, multipart: true do |f| %>
        <div class="mb-3">
          <%= f.label :last_name, class: 'form_label' %>
          <%= f.text_field :last_name, class: 'form-control' %>
        </div>
        <div class="mb-3">
          <%= f.label :first_name, class: 'form-label' %>
          <%= f.text_field :first_name, class: 'form-control' %>
        </div>
        <div class="mb-3">
          <%= f.label :email, class: 'form-label' %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class="mb-3">
          <%= f.label :role, class: 'form-label' %>
          <%= f.select :role, User.roles_i18n.invert, class: 'form-control' %>
        </div>
        <div>
          <%= f.label :avatar, class: 'form-label' %>
          <%= f.file_field :avatar, class: 'form-control' %>
          <p><i class="bi bi-file-earmark-image"></i>jpg or png</p>
        </div>
        <div class="mt-3">
          <% if @user.avatar.attached? %>
            <%= image_tag @user.decorate.image_resize(200, 200) %>
          <% end %>
        </div>
        <%= f.submit nil, class: "btn btn-outline-primary" %>         
      <% end %>
    </div>
  </div>
</div>