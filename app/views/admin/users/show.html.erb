<div class="container">
  <div class="row">
    <div class="col-md-8 mt-3">
      <table class="table">
        <tbody>
          <tr>
            <th scope="row"><%= User.human_attribute_name(:id) %></th>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <th scope="row"><%= User.human_attribute_name(:full_name) %></th>
            <td><%= @user.full_name %></td>
          </tr>
          <tr>
            <th scope="row"><%= User.human_attribute_name(:email) %></th>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <th scope="row"><%= User.human_attribute_name(:role) %></th>
            <td><%= @user.role_i18n %></td>
          </tr>
          <tr>
            <th scope="row"><%= User.human_attribute_name(:avatar) %></th>
            <td><%= image_tag @user.decorate.image_resize(200, 200) %></td>
          </tr>
        </tbody>
      </table>
      <div class="d-flex">
        <button type="button" class="btn btn-success me-3"><%= link_to t('default.edit'), edit_admin_user_path(@user), class: 'link-light' %></button>
        <%= button_to t('default.delete'), admin_user_path(@user), method: :delete, class: 'btn btn-danger' %>
      </div>
    </div>
  </div>
</div>