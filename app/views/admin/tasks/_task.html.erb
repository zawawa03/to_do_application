<tr>
  <td><%= task.name %></td>
  <td><%= task.user.full_name %></td>
  <td class="<%= task_state_class(task.state) %>"><%= task.state_i18n %></td>
  <td><%= l task.start_time, format: :long %></td>
  <td><button type="button" class="btn btn-primary"><%= link_to t('default.show'), admin_task_path(task), class: 'link-light' %></button></td>
  <td><button type="button" class="btn btn-success"><%= link_to t('default.edit'), edit_admin_task_path(task), class: 'link-light' %></button></td>
  <td><%= button_to t('default.delete'), admin_task_path(task), method: :delete, class: 'btn btn-danger' %></td>
</tr>