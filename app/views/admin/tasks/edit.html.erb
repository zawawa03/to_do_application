<div class='container'>
  <div class='row'>
    <div class='col-md-8'>
      <%= render partial: 'shared/error_message', locals: { object: @task } %>
      <%= render partial: 'task_form', locals: { task: @task } %>
      <div class="d-flex mt-3">
        <button type="button" class="btn btn-success me-3"><%= link_to t('default.edit'), edit_admin_task_path(@task), class: 'link-light' %></button>
        <%= button_to t('default.delete') , admin_task_path(@task), method: :delete,class: 'btn btn-danger' %>
      </div>
    </div>
  </div>  
</div>